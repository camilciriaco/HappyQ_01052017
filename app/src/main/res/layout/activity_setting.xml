<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <Switch
        android:text="Push Notification"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/swNotification"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:text="Location"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/swLocation"
        android:layout_below="@+id/swNotification"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/swLocation"
        android:layout_marginTop="15dp"
        android:id="@+id/horLine1"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view1"
        android:layout_above="@+id/swLocation"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view2"
        android:layout_below="@+id/lyt_parent4"
        android:layout_alignParentStart="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view3"
        android:layout_below="@+id/lyt_parent2"
        android:layout_alignParentStart="true" />


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent3"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        >

    <TextView
        android:text="Send Feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tFeed"
        android:textSize="15dp"
        android:textColor="#000000"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/view3"
         />

    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent4"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horLine1">
    <TextView
        android:text="About HappyQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tAbout"
        android:textSize="15dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="#000000"
        android:layout_below="@+id/horLine1"
         />
</com.balysv.materialripple.MaterialRippleLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view5"
        android:layout_alignBottom="@+id/lyt_parent5"
        android:layout_alignParentEnd="true" />
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent2"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5">

        <TextView
            android:text="Rate us in Google Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tRate"
            android:textSize="15dp"
            android:textColor="#000000"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/view5"
             />
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent5"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        >


    <TextView
        android:text="Terms of Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tTerms"
        android:textSize="15dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="#000000"
        android:layout_below="@+id/view2"
         />

</com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_parent3"
        android:layout_alignParentStart="true">
        <TextView
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tLogOut"
            android:textSize="15dp"
            android:textColor="#000000"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/lyt_parent2"
            android:layout_alignParentStart="true" />
    </com.balysv.materialripple.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#c0c0c0"
        android:id="@+id/horLine2"
        android:layout_below="@+id/lyt_parent3"
         />
</RelativeLayout>

