<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:text="LTO ALABANG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:text="Serving Q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:text="001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_Qnumber"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_date"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_status"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:text="101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tvQueue"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="LTO-ALABANG APPLICATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/textView8"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/tv_Qnumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date2"
        android:layout_below="@+id/tvQueue"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:text="Reserve By Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/bt_rdate"
        android:layout_marginTop="600dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#06D85F"
        android:textColor="#ffffff"/>


    <Button
        android:text="Reserve Queue Number Now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_rnow"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="530dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#06D85F"
        android:textColor="#ffffff"/>

</RelativeLayout>
