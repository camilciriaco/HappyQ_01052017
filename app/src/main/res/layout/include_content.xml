<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbranchname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_date"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:text="Reserve By Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/bt_rdate"
        android:layout_marginTop="600dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#06D85F"
        android:textColor="#ffffff"/>


    <Button
        android:text="Reserve Queue Number Now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_rnow"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="530dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#06D85F"
        android:textColor="#ffffff"/>

    <TextView
        android:text="Recent Serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdisplayrecent"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/tv_date"
         />
    <TextView
        android:text="LTO-ALABANG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/tv_branchnamea"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvcurrent"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date2"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/tvQueuenumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcount"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/tvdisplaycount"
        android:layout_alignStart="@+id/tvdisplaycount"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Current Serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdisplaycurrent"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvrecent"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tvdisplayrecent" />

    <TextView
        android:text="001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcurrent"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tvdisplaycurrent"
        android:layout_toEndOf="@+id/tvQueuenumber" />

    <TextView
        android:text="101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tvQueuenumber"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="APPLICATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/tv_selectqueue"
        android:layout_below="@+id/tv_branchnamea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="BRANCH NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbranchname"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="COUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdisplaycount"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/tv_date2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
