<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.happyq.rvn.happyq.reservation_query.Now_Query" >



    <TextView
        android:text="001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/tvQNumber"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_above="@+id/tvDate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="LTO-ALABANG APPLICATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tName"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_above="@+id/tvQueue"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCredit"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingRight="70dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Free Credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingLeft="50dp"
        android:layout_alignBaseline="@+id/tvCredit"
        android:layout_alignBottom="@+id/tvCredit"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFree"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/tName" />

    <TextView
        android:text="Credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tName"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvCredit"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Sample City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:text="Queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:text="001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tvQueue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="RESERVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btReserve"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:background="#06D85F"
        android:textColor="#ffffff"/>

    <TextView
        android:text="00/00/00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_above="@+id/btReserve"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />


</RelativeLayout>